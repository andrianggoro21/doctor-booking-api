generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum DoctorType {
  GIGI
  KECANTIKAN
  UMUM
}

model Doctor {
  id        Int        @id @default(autoincrement())
  name      String     @unique
  type      DoctorType
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  schedules Schedule[]
  bookings  Booking[]

  @@map("doctors")
}

model Schedule {
  id        Int      @id @default(autoincrement())
  doctorId  Int
  day       String
  openTime  String
  closeTime String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  doctor Doctor @relation(fields: [doctorId], references: [id], onDelete: Cascade)

  @@unique([doctorId, day])
  @@map("schedules")
}

model Booking {
  id          Int      @id @default(autoincrement())
  patientName String
  phoneNumber String
  bookingDate DateTime
  bookingTime String // Format: "09:00"
  doctorId    Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  doctor Doctor @relation(fields: [doctorId], references: [id], onDelete: Cascade)

  @@map("bookings")
}
